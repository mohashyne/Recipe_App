<h1>Inventory</h1>

<div class="row">
  <% @inventories.each do |inventory| %>
    <div class="col-md-9 mb-4">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <h5 class="card-title"><%= link_to inventory.food.name, inventory_path(inventory) %></h5>
            <p class="card-text"><%= inventory.description %></p>
          </div>
        </div>
        <div class="card-footer">
          <%= form_with(model: inventory, local: false, html: { method: :delete, data: { confirm: 'Are you sure?' } }) do |form| %>
            <%= form.submit 'Remove', class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add food', new_inventory_path, class: 'btn btn-primary' %>
