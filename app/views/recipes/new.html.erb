<%= image_tag '', class: 'headline-image w-100 opacity-6' %>
<section class="main_page_wrapper w-100">
  <div class="container section-container">
    <div class="row d-flex flex-column align-items-center">

      <h1 class="main-title">Create a new Recipe</h1>

      <div class="form-wrapper">
        <%= form_with(model: @recipe, url: recipes_path, html: { class: 'form' }) do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, required: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label 'Preparation time (hours):' %>
            <%= f.number_field :preparation_time, min: 0, step: 0.01, required: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label 'Cooking time (hours):' %>
            <%= f.number_field :cooking_time, min: 0, step: 0.01, required: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <div class="d-flex flex-row">
              <%= f.radio_button :public, true, class: 'form-check-input' %>
              <%= f.label 'Public', class: 'form-check-label' %>
            </div>
            <div class="d-flex flex-row">
              <%= f.radio_button :public, false, class: 'form-check-input' %>
              <%= f.label 'Private', class: 'form-check-label' %>
            </div>
          </div>
          <div class="form-group" id="recipe-description">
            <%= f.label :description %>
            <%= f.text_area :description, required: true, class: 'form-control' %>
          </div>
          <div class="actions w-100 d-flex flex-row justify-end align-items-center">
            <%= f.submit "Save recipe", class: 'btn btn-primary' %>
            <%= link_to 'Cancel', recipes_path, class: 'btn btn-warning' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
